@model Staycation.Models.Kunde


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Opret Kunde</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="KundeOgBookingOverblik">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">Fornavn</label>
                <input asp-for="Fornavn" class="form-control" />
                <span asp-validation-for="Fornavn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Efternavn</label>
                <input asp-for="Efternavn" class="form-control" />
                <span asp-validation-for="Efternavn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Telefon Nummer</label>
                <input asp-for="TelefonNummer" class="form-control" />
                <span asp-validation-for="TelefonNummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fødselsdag</label>
                <input asp-for="Fødselsdagsdato" class="form-control" />
                <span asp-validation-for="Fødselsdagsdato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Adresse</label>
                <input asp-for="Adresse.Adresse1" class="form-control" />
                <span asp-validation-for="Adresse.Adresse1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Nummer</label>
                <input asp-for="Adresse.Nummer" class="form-control" />
                <span asp-validation-for="Adresse.Nummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Etage</label>
                <input asp-for="Adresse.Etage" class="form-control" />
                <span asp-validation-for="Adresse.Etage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Postnummer</label>
                <input asp-for="Adresse.PostNummer" class="form-control" />
                <span asp-validation-for="Adresse.By" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">By</label>
                <input asp-for="Adresse.By" class="form-control" />
                <span asp-validation-for="Adresse.By" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Næste" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="KundeBooking" asp-action="Create">Back to Booking</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
