@model Staycation.Models.Booking

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Antal Voksne</label>
                <input asp-for="AntalVoksne" class="form-control" />
                <span asp-validation-for="AntalVoksne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Antal Børn</label>
                <input asp-for="AntalBørn" class="form-control" />
                <span asp-validation-for="AntalBørn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tjek Ind Dato</label>
                <input asp-for="TjekIndDato" class="form-control" />
                <span asp-validation-for="TjekIndDato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tjek Ud Dato</label>
                <input asp-for="TjekUdDato" class="form-control" />
                <span asp-validation-for="TjekUdDato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Værelse Type</label>
                <select asp-for="VærelseTypeId" class="form-control" asp-items="ViewBag.VærelseTypeId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Total Pris</label>
                <input asp-for="TotalPris" class="form-control" />
                <span asp-validation-for="TotalPris" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
